# renames all files underneath the PWD to replace unwanted characters such as:
#       whitespace
#       parentheses
#       underscores
#       semicolon
#       ampersand

#make sure extended globbing is on
shopt -s extglob;

# Functions {{{1
verbose() {
  if [[ "$verbose" = "1" ]]; then
    echo "$1" >&2
  fi
}

error() {
  echo "$1" >&2
}

getfilenames() 
{
  if [[ -z "$filetypes" ]]; then
    find . -maxdepth "$maxdepth" || exit 1
  else
    find . -maxdepth "$maxdepth" $filetypes || exit 1
  fi
}
# }}}
# Usage {{{1
#
usage() {
cat <<EOD
formatfilenames
© Copyright 2014 Ryan Delaney. All rights reserved.
Web site: http://github.com/rpdelaney

formatfilenames removes annoying characters from filenames.
Maxdepth defaults to 1 (the current working directory). It will
never rename directories.

Usage: formatfilenames [OPTION] [MAXDEPTH]

Options
  -?, --help                  print this help and exit
  -v, --verbose               increase verbosity
  -d, --directory             change directory names too
  -n, --dry-run               don't change anything
EOD
exit 1
}
# }}}
# Parameters {{{1
#
while :
do
  case $1 in
    --help | -\?)
      usage
      exit 0
      ;;
    -n | --dry-run)
      dryrun="1"
      shift
      ;;
    -d | --directory)
      renamedirs="1"
      shift
      ;;
    -v | --verbose)
      # Each instance of -v adds 1 to verbosity
      local verbose=$((verbose+1))
      shift
      ;;
    --) # End of all options
      shift
      break
      ;;
    -*)
      echo "FATAL: Unknown option : $1" >&2
      exit 1
      shift
      ;;
    *)  # no more options. Stop while loop
      break
      ;;
  esac
done

# Maxdepth defaults to 1
if [[ -n "$1" ]]; then
  maxdepth="$1"
else
  maxdepth=1
fi
# }}}
# Main {{{1
if [[ -z "$renamedirs" ]]; then
  # If renamedirs is unset, then restrict to files only (no directories)
  filetypes="-type f"
fi

while read file; do

  if [[ "$file" != "." ]]; then
    # Store the newfile in another variable
    # newfile="${file##*/}"
      newfile="$file"
    # Do our substitutions
      newfile="${newfile//'!'/#}"
      newfile="${newfile//+( )/.}"
      newfile="${newfile//.-./..}"
      newfile="${newfile//\(/_}"
      newfile="${newfile//\)/_}"
      newfile="${newfile//;/_}"
      newfile="${newfile//\[/_}"
      newfile="${newfile//\]/_}"
      newfile="${newfile//~/}"
      newfile="${newfile//&/and}"

    # If the substitutions are different from the newfile, rename the file
      if [[ "$file" != "$newfile" ]]; then
        if [[ -z "$dryrun" ]]; then
          mv -v -n "$file" "$newfile"
        else
          echo "$file -> $newfile"
        fi
      fi
    fi

done < <(getfilenames);
# 1}}}

exit 0


