#!/usr/bin/env bash
#

for file in "$@"; do
  date="$(date +%Y%m%d-%H%m%S)" || exit
  if command -v greadlink &> /dev/null; then
    readlink="greadlink"
  else
    readlink="readlink"
  fi
  oldname="$("$readlink" -f "$file")" || exit
  newname="$oldname"."$date".bak
  cp -r --reflink=auto "$file" "$newname"
done

# EOF
