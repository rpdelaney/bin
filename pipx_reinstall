#!/usr/bin/env python3
#
"""
Re-initialize my python tools and the injections I need.

* https://github.com/pypa/pipx
"""
#
import subprocess
from typing import Dict, List

T_AppsList = Dict[str, List[str | None]]

_PIPX_APPS: T_AppsList = {
    "daff": [],
    "downforeveryone": [],
    "dumbpw": [],
    "em-keyboard": [],
    "extinfo": [],
    "gallery-dl": [
        "yt-dlp",
    ],
    "howdoi": [],
    "mdformat": [
        "mdformat-toc",
        "mdformat-gfm",
        "mdformat-black",
        "mdformat-frontmatter",
    ],
    "mypy": [],
    "pepotron": [],
    "pre-commit": [],
    "ptpython": [],
    "pudb": [],
    "pwstore": [],
    "pyupgrade": [],
    "refurb": [],
    "rich-cli": [],
    "ruff": [],
    "thefuck": [],
    "tldr": [],
    "twine": [],
    "uncolor": [],
    "xonsh": [
        "prompt_toolkit",
        "ptpython",
        "pyperclip",
        "requests",
        "rich",
        "xonsh-direnv",
        "xontrib-abbrevs",
        "xontrib-argcomplete",
        "xontrib-avox-poetry",
        "xontrib-commands",
        "xontrib-expand-braces",
        "xontrib-gruvbox",
        "xontrib-jedi",
        "xontrib-kitty",
        "xontrib-vox",
        "xontrib-whole-word-jumping",
    ],
    "yamllint": [],
    "yt-dlp": [],
}


def _cmd(command: str, check: bool = True) -> None:
    print(f"+ {command}")
    subprocess.run(command.split(), check=check)


def main() -> None:
    for pipx_app in _PIPX_APPS.keys():
        _cmd(f"pipx reinstall {pipx_app}")
        for inject in _PIPX_APPS[pipx_app]:
            _cmd(f"pipx inject {pipx_app} {inject}")


if __name__ == "__main__":
    main()

# EOF
